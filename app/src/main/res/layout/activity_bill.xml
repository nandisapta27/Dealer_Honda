<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/orange"
    android:layout_height="match_parent"
    tools:context="com.example.dealer_honda.Bill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan Motor"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/lightGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:hint="nama"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/lightGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:hint="alamat"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textColor="@color/lightGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:hint="nomor telepon"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produk"
            android:textColor="@color/lightGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <RadioGroup
            android:id="@+id/pilihproduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/produk1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/lightGray"
                android:text="Honda Beat"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Genio"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Scoopy"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Vario 125"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Vario 150"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda PCX"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda ADV 150"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Forza"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CB 150"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CBR 150 R"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CB 150 R"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CBR 250 R"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Revo X"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Monkey"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CRV 250"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CT 125"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Super Cub C125"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Rebel"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda CBR 600 RR"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/produk20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lightGray"
                android:text="Honda Supra X 125"
                android:layout_marginTop="10dp"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilihan Warna"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/ukuran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:hint="Warna M/H/Abu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Pembelian"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:hint="jumlah pembelian"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/buy"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:text="Buy"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

</ScrollView>
